<?xml version="1.0"?>
<robot name="simple_humanoid">

  <!-- Torso -->
  <link name="torso">
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="10"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    <visual>
      <geometry><box size="0.3 0.2 0.5"/></geometry>
      <origin xyz="0 0 0.25"/>
    </visual>
    <collision>
      <geometry><box size="0.3 0.2 0.5"/></geometry>
      <origin xyz="0 0 0.25"/>
    </collision>
  </link>

  <!-- Right leg -->
  <link name="right_thigh">
    <inertial><mass value="2"/></inertial>
    <visual><geometry><box size="0.1 0.1 0.3"/></geometry></visual>
    <collision><geometry><box size="0.1 0.1 0.3"/></geometry></collision>
  </link>

  <joint name="right_hip" type="revolute">
    <parent link="torso"/>
    <child link="right_thigh"/>
    <origin xyz="-0.1 0 -0.25" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.57" upper="1.57" effort="100" velocity="1"/>
  </joint>

  <link name="right_shin">
    <inertial><mass value="1"/></inertial>
    <visual><geometry><box size="0.1 0.1 0.3"/></geometry></visual>
    <collision><geometry><box size="0.1 0.1 0.3"/></geometry></collision>
  </link>

  <joint name="right_knee" type="revolute">
    <parent link="right_thigh"/>
    <child link="right_shin"/>
    <origin xyz="0 0 -0.3" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="0" upper="2.0" effort="100" velocity="1"/>
  </joint>

  <!-- Left leg (mirror) -->
  <link name="left_thigh">
    <inertial><mass value="2"/></inertial>
    <visual><geometry><box size="0.1 0.1 0.3"/></geometry></visual>
    <collision><geometry><box size="0.1 0.1 0.3"/></geometry></collision>
  </link>

  <joint name="left_hip" type="revolute">
    <parent link="torso"/>
    <child link="left_thigh"/>
    <origin xyz="0.1 0 -0.25" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.57" upper="1.57" effort="100" velocity="1"/>
  </joint>

  <link name="left_shin">
    <inertial><mass value="1"/></inertial>
    <visual><geometry><box size="0.1 0.1 0.3"/></geometry></visual>
    <collision><geometry><box size="0.1 0.1 0.3"/></geometry></collision>
  </link>

  <joint name="left_knee" type="revolute">
    <parent link="left_thigh"/>
    <child link="left_shin"/>
    <origin xyz="0 0 -0.3" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="0" upper="2.0" effort="100" velocity="1"/>
  </joint>

</robot>
